{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$HOME/**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$APPCONFIG/**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$APPDATA/**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$APPLOCALDATA/**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$CONFIG/**",
          "requireLiteralLeadingDot": false
        },
        {
          "path": "$DATA/**",
          "requireLiteralLeadingDot": false
        }
      ]
    },
    "fs:scope",
    "core:path:default",
    "fs:allow-remove",
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-app-write",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "shell:allow-open"
  ]
}